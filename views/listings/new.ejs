<% layout("/layouts/boilerplate") %>


<div class="row">
    <div class="col-8 offset-2">
        
        <br>
        <h3>create new listings</h3>

        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              name="listing[title]"
              placeholder="enter catchy title"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Great title !</div>
          </div>
      
          <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea
              name="listing[description]"
              type="text"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">please write short description</div>

          </div>
      
   
          
          
          <div class="mb-3">
            <label for="image" class="form-label">Upload Listing image</label>
            <input
            name="listing[image]"
            type="file"
            class="form-control"
          />
        </div>
        
      
          <div class="mb-3">
              <label for="location" class="form-label">location</label>
              <input name="listing[location]" 
              placeholder="enter location" 
              type="text"
              class="form-control"
              required
               />
               <div class="invalid-feedback">write valid location</div>

          </div>

          <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <input name="listing[price]" 
                placeholder="enter price" 
                
                class="form-control"
                required
                />
                <div class="invalid-feedback">write valid price</div>

        
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="listing[country]" 
                placeholder="enter country" 
                type="text"
                class="form-control"
                required
                 />
                 <div class="invalid-feedback">write valid country</div>

            </div>

        
          </div>
      
      
          <br><br>
          <button class="btn btn-dark">add my house</button>
          <br><br>
        </form>
      
    </div>
</div>    
  